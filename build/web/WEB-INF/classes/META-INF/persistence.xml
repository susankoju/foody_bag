<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="foodybagPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>edu.kist.bit.foodybag.entity.FoodTypes</class>
    <class>edu.kist.bit.foodybag.entity.ItemsOrder</class>
    <class>edu.kist.bit.foodybag.entity.Messages</class>
    <class>edu.kist.bit.foodybag.entity.Foods</class>
    <class>edu.kist.bit.foodybag.entity.Ratings</class>
    <class>edu.kist.bit.foodybag.entity.CustomerOrder</class>
    <class>edu.kist.bit.foodybag.entity.Bills</class>
    <class>edu.kist.bit.foodybag.entity.Users</class>
    <class>edu.kist.bit.foodybag.entity.Restaurants</class>
    <class>edu.kist.bit.foodybag.entity.Reservation</class>
    <class>edu.kist.bit.foodybag.entity.Events</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/foody_bag?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
